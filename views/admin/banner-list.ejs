<%- include('../layout/aheader.ejs') %>

<div class="container-fluid mt-2 text-center" >
<div class="col-md-12">
    <div class="card mb-3 card">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-dark  border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-capitalize ps-3">Banners</h6>
            </div>
          </div>
        <div class="table-responsive p-4">
            <table class="align-middle mb-0 table table-borderless table-striped table-hover" id="table-setting">
                <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Images</th>
                    <th scope="col">Name</th>
                    <th scope="col">offers tag</th>
                    <th scope="col">discount</th>
                    <th scope="col">users view</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                  

                    <% bannerData.forEach((data,index) => { %>

                      <tr>
                        <td class="text-center text-muted"><%= index+1 %></td>
                        <td>
                            <div class="widget-content p-0">
                                <div class="widget-content-wrapper">
                                    <div class="widget-content-left mr-3">
                                        <div class="widget-content-left">
                                            
                                        </div>
                                    </div>
                                    <div class="widget-content-left flex2">
                                     
                                        <img src="/images/<%= data.images[0] %>" width="60px" alt="">
                                       
                                     
                                    </div>
                                </div>
                            </div>
                        </td>
    
                       
                        <td class="text-center">
                            <%= data.bannerTitle1%>
                            
                        </td>
                        <td class="text-center">
                            <%=data.bannerTitle2%>
                         
                        </td>
                        <td>
                            <%=data.price%>
                        </td>
                        <td>
                            <% if(data.list == 0){%>
                                <b>list</b>
                                <%}else{%>
                                    <b>unlist</b>
                                <%}%>
                        </td>
                        <td class="text-center">
                            <a href="/admin/edit-banner?id=<%=data._id %>"
                                class="btn btn-primary">Edit</a>


                            <a href="/admin/delete-banner?id=<%= data._id %>" class="btn btn-danger"
                                return
                                onclick="confirm('confirm delete <%=bannerData. bannerTitle1%>')">Delete</a>
                             <% if(data.list===0 ){%>
        <a href="/admin/banner-unlistBanner?id=<%=data._id%>" class="btn btn-info">unlist</a>
        <%}else{%>
            <a href="/admin/banner-listBanner?id=<%= data._id%>" class="btn btn-info">list</a>
            <%} %> 
                    
                        </td>
                       
                    </tr>
                      
                  <%  }); %>
                    
               
                 
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 text-right">
            <a href="/admin/add-banner" class="btn btn-dark">add-banner</a>
        </div>
    </div>
</div>
</div>



<%- include('../layout/afooter.ejs') %>
