<%-include('../layout/aheader.ejs') %>


<div class="container-fluid mt-2 text-center" >
  <div class="col-md-12">
      <div class="card mb-3 card">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-dark  border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Products</h6>
          </div>
        </div>
          <div class="table-responsive p-4">
              <table class="align-middle mb-0 table table-borderless table-striped table-hover" id="table-setting">
                  <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Images</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">quantity</th>
                    <th scope="col">status</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                    

                    <% productData.forEach((data,index) => { %>
  
                      <tr>
                        <td class="text-center text-muted"><%= index+1 %></td>
                    
                           
                      <td><img src="/images/<%=data.images[0] %>" width="60px" alt=""></td>
                                  
                        
                        <td class="text-center"> <%= data.productName%></td>

                        <td class="text-center">  <%=data.price%></td>

                        <td class="text-center"><%= data.quantity %></td>

                        <td class="text-center"><%= data.status%></td>


                       <td class="text-center"><%=data.category.name %></td>


                        <td class="text-center"> <a href="/admin/edit-product?id=<%=data._id %>" class="btn btn-dark">Edit</a>
                          <a href="/admin/delete-product?id=<%= data._id %>" class="btn btn-dark"return onclick="confirm('confirm delete <%=data.productName%>')">Delete</a>
                       </td>
                    </tr>
                      
                  <%  }); %>
                     
                      
                 
                   
                  </tbody>
              </table>
              <div class="row"><div class="col-md-12 text-end"><a href="/admin/add-product" class="btn btn-dark me-5">add product</a></div></div>
          </div>
      </div>
  </div>
  </div>

<%-include('../layout/afooter.ejs') %>