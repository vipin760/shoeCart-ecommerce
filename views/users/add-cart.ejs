    data: JSON.stringify({
        id: id,
        proId: proId,
        price: price,
        i:i,
        qty:qty
    }),   
    success: function (response) {
                console.log(response);
                $(`#${id}`).val(response.quantity)
                $('#' + proId).text(response.totalPrice);
